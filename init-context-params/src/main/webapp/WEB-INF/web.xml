<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://JAVA.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<context-param>
		<param-name>Application Name</param-name>
		<param-value>Servlet Init and Context Param</param-value>
	</context-param>

	<servlet>
	    <servlet-name>ServletInitContextParamsServlet</servlet-name>
	    <servlet-class>io.javamasters.servlet.initcontext.params.demo.ServletInitContextParamsDemo</servlet-class>
	    <init-param>
	    	<param-name>Phone Number</param-name>
	    	<param-value>23432233</param-value>
	    </init-param>
	    <init-param>
	    	<param-name>Address</param-name>
	    	<param-value>Mumbai</param-value>
	    </init-param>
	    <init-param>
	    	<param-name>User Name</param-name>
	    	<param-value>Sachin</param-value>
	    </init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ServletInitContextParamsServlet</servlet-name>
		<url-pattern>/params</url-pattern>
	</servlet-mapping>

</web-app>